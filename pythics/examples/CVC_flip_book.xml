<html>
<head><title>CVC Flip Book</title></head>
<body>

<object classid='TextBox' id='display' height='270' width='100%'>
    <param name='align' value='center'/>
    <param name='read_only' value='True'/>
    <param name='font' value='Sans'/>
    <param name='font_size' value='160'/>
    <param name='font_weight' value='Bold'/>
</object>
<br/>

<table width="100%">
  <tr><td width="33%">
        <object classid='Button' height='50' width='100%'>
            <param name='label' value="u'\u2191'"/>
            <param name='actions' value="{'clicked': 'CVC_flip_book.letter_1_previous'}"/>
        </object>
    </td><td width="33%">
        <object classid='Button' height='50' width='100%'>
            <param name='label' value="u'\u2191'"/>
            <param name='actions' value="{'clicked': 'CVC_flip_book.letter_2_previous'}"/>
        </object>
    </td><td width="33%">
        <object classid='Button' height='50' width='100%'>
            <param name='label' value="u'\u2191'"/>
            <param name='actions' value="{'clicked': 'CVC_flip_book.letter_3_previous'}"/>
        </object>
    </td></tr>
  <tr><td width="33%">
        <object classid='Button' height='50' width='100%'>
            <param name='label' value="u'\u2193'"/>
            <param name='actions' value="{'clicked': 'CVC_flip_book.letter_1_next'}"/>
        </object>
    </td><td width="33%">
        <object classid='Button' height='50' width='100%'>
            <param name='label' value="u'\u2193'"/>
            <param name='actions' value="{'clicked': 'CVC_flip_book.letter_2_next'}"/>
        </object>
    </td><td width="33%">
        <object classid='Button' height='50' width='100%'>
            <param name='label' value="u'\u2193'"/>
            <param name='actions' value="{'clicked': 'CVC_flip_book.letter_3_next'}"/>
        </object>
    </td></tr>
</table>

<object classid="Main" id="main" width="0%">
  <param name="python_filename" value="CVC_flip_book"/>
  <param name="actions" value="{'initialized': 'CVC_flip_book.initialize'}"/>
</object>

</body>
</html>
